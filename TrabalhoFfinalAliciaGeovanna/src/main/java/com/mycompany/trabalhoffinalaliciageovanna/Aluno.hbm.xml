<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.mycompany.trabalhoffinalaliciageovanna.Aluno" table="Aluno">
        
        <id name="matricula" type="string" access="field">
            <column name="matricula" unique="true" not-null="true" />
        </id>
        
        <property name="nome" type="string" access="field">
            <column name="nome" not-null="true" />
        </property>

        <property name="CPF" type="string" access="field">
            <column name="cpf" unique="true" not-null="true" />
        </property>
        
        <property name="telefone" type="string" access="field">
            <column name="telefone" />
        </property>
        
        <property name="dataNasc" type="date" access="field">
            <column name="data_nasc" not-null="true" />
        </property>
        
        <property name="idade" type="int" access="field">
            <column name="idade" not-null="true" />
        </property>
        
    </class>
</hibernate-mapping>